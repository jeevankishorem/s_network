<html lang="en">
<head>
<meta charset="utf-8" />
<script>
$(function() {
$( "#accordion" ).accordion();
});
</script>
</head>
<body>
<div id="accordion">

<% blogs.each do |blog| %>
	<li>
		<% if blog.comments.count<5%>
		<h3><span class="title"><%= blog.title %></span><span class="username">   by <%=blog.user.first_name%> </span></h3>
			<%else%>
			<h3><span class="titlehigh"><%= blog.title %></span><span class="usernamehigh">   by <%=blog.user.first_name%></span></h3>
				<%end%>
				
<div>	
		<span class="comment"><%= link_to "View comments ", blog_path(blog.id) %></span>
	  <span class="content"><%= blog.content %></span>
	  <span class="timestamp">
	    Posted <%= time_ago_in_words(blog.created_at) %> ago.

	  
	</span>
	  </div>
	</li>
<% end %></div>
</body>
</html>



